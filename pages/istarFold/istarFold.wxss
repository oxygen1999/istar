/* pages/istarFold/istarFold.wxss */
.main_line_public {
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  border-bottom: 1rpx solid #cccccc;
  padding: 0 10rpx 0 10rpx;
  background-color: #ffffff;
}

.line {
  font-size: 28rpx;
  margin-top: 5rpx;
  color: #303133;
  border-top: 1rpx solid #cccccc;
}
/* 盒子 */
.line_box {
  z-index: 4;
  width: 100%;
}

.line_content {
  /* position:relative; */
  font-size: 28rpx;
  color: #303133;
}

.T {
  top: 78rpx;
  /* 设置为fixed在下方内容上层弹出 */
  position: fixed;
  overflow: hidden;
  animation-name: myopen;
  animation-duration: 0.5s;
}

.F {
  /* 设置为fixed在下方内容上层弹出 */
  top: 78rpx;
  position: fixed;
  height: 320rpx;
  display: block;
  overflow: hidden;
  animation-name: close;
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
}

/* 展开动画 */
@keyframes myopen {
  0% {
    height: 0rpx;
  }

  100% {
    height: 320rpx;
  }
}

@keyframes close {
  from {
    height: 320rpx;
  }

  to {
    height: 0rpx;
  }
}


.test {
  top: 0;
  height: 80rpx;
  width: 100%;
  position: fixed;
  background-color: #cccccc;
  display: flex;
  justify-content: center;
  align-items: center;

}
/* 遮罩层 */
.full {
  position: fixed;
  top: 80rpx;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 0.3s;
  opacity: 0.5;
}