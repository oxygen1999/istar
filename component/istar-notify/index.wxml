    <!-- <view>
      <view class="istar-dialog-footer">
        <view class="istar-dialog-customize" bindtap="onCustomize" data-status="cancel"
          style="background-color:{{type}}">{{opeations.customize}}
        </view>
      </view>
      <view style="height:40rpx"></view>
    </view>  -->
    <br />
  </view>

</view>
